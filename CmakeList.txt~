#I followed example in this site http://www.cmake.org/examples/	
cmake_minimum_required (VERSION 2.8.11)
project (LogMaker)

# Recurse into the "Hello" and "Demo" subdirectories. This does not actually
# cause another cmake executable to run. The same process will walk through
# the project's entire directory structure.
add_subdirectory (include)
add_subdirectory (source)

#OK, Let's Build the library
add_library (LogMaker LogMaker.cpp)



target_include_directories (LogMaker {CMAKE_CURRENT_SOURCE_DIR}/include  {CMAKE_CURRENT_SOURCE_DIR}/source )

# Add executable called "helloDemo" that is built from the source files
# "demo.cxx" and "demo_b.cxx". The extensions are automatically found.
add_executable (LogMaker LogMaker.cpp)

target_link_libraries (LogMaker LogMaker)
